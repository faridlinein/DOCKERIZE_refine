###########
# BUILDER #
###########

# For more information, please refer to https://aka.ms/vscode-docker-python
FROM python:3.8.0-alpine as builder

# set work directory
WORKDIR /usr/src/app

# Keeps Python from generating .pyc files in the container
ENV PYTHONDONTWRITEBYTECODE 1
# Turns off buffering for easier container logging
ENV PYTHONUNBUFFERED 1
# set our environment variable for nginx
# set our environment variable for nginx
# set our environment variable for nginx
ENV MUSL_LOCPATH="/usr/share/i18n/locales/musl"

# install psycopg2 dependencies
RUN apk update \
    && apk add postgresql-dev gcc python3-dev musl-dev

# Lint or Flacke8
RUN pip install --upgrade pip
RUN pip install flake8
COPY . /usr/src/app/
RUN flake8 --ignore=E501,F401,E712,E501,F401,W292 .


# Install pip requirements
# COPY ./requirements.txt /usr/src/app/requirements.txt # DevelopmenStage
COPY ./requirements.txt .
# RUN python -m pip install -r requirements.txt # DevelopmenStage
RUN pip wheel --no-cache-dir --no-deps --wheel-dir /usr/src/app/wheels -r requirements.txt

#########
# FINAL #
#########

# pull official base image
FROM python:3.8.0-alpine

# create directory for the app user
RUN mkdir -p /home/app

# create the app user
RUN addgroup -S app && adduser -S app -G app

# create the appropriate directories
ENV HOME=/home/app
ENV APP_HOME=/home/app/web
RUN mkdir $APP_HOME
RUN mkdir $APP_HOME/staticfiles
RUN mkdir $APP_HOME/mediafiles
WORKDIR $APP_HOME

# install dependencies
RUN apk update && apk add libpq
COPY --from=builder /usr/src/app/wheels /wheels
COPY --from=builder /usr/src/app/requirements.txt .
RUN pip install --upgrade pip
RUN pip install --no-cache /wheels/*

# copy entrypoint
# COPY ./entrypoint.sh /usr/src/app/entrypoint.sh # DevelopmenStage
COPY ./entrypoint.prod.sh $APP_HOME

# copy project
# COPY . /usr/src/app/ # DevelopmenStage
COPY . $APP_HOME

# chown all the files to the app user
RUN chown -R app:app $APP_HOME

# change to the app user
USER app

# run entrypoint.sh
# ENTRYPOINT ["/usr/src/app/entrypoint.sh"] # DevelopmenStage
ENTRYPOINT ["/home/app/web/entrypoint.prod.sh"]